generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String?
  releaseDate DateTime?
  rating      Float?   @default(0) // Nuovo campo per il voto
  createdAt   DateTime @default(now())
}

model Book {
  id          String   @id @default(uuid())
  title       String
  author      String
  description String?
  rating      Float?   @default(0)
  createdAt   DateTime @default(now())
}

model TVShow {
  id          String   @id @default(uuid())
  title       String
  seasons     Int
  description String?
  rating      Float?   @default(0)
  createdAt   DateTime @default(now())
}

